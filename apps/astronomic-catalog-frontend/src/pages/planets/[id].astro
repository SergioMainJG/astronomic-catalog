---
import Layout from "../../layouts/Layout.astro";
import type { Planet } from "../../types";

export const prerender = false;

const { id } = Astro.params;

let planet: Planet | null = null;
let error = null;

const API_URL = import.meta.env.API_BACKEND || "http://localhost:3000";

try {
  const response = await fetch(`${API_URL}/planets/${id}`);
  if (response.ok) {
    planet = await response.json();
  } else {
    error = `Planet not found (Status: ${response.status})`;
  }
} catch (e) {
  console.error("Failed to fetch planet details", e);
  error = "Failed to load planet details.";
}
---

<Layout title={planet?.celestialObject?.globalName || "Planet Details"}>
  <div class="max-w-4xl mx-auto space-y-8">
    <a
      href="/jerarchy-planet"
      class="inline-flex items-center text-blue-400 hover:text-blue-300 mb-4 transition-colors"
    >
      &larr; Back to Orbits
    </a>

    {
      error ? (
        <div class="bg-red-900/50 border border-red-700 text-red-200 p-4 rounded-lg">
          <h2 class="text-xl font-bold mb-2">Error</h2>
          <p>{error}</p>
        </div>
      ) : planet ? (
        <div class="bg-slate-800 rounded-2xl overflow-hidden border border-slate-700 shadow-2xl">
          <div class="relative h-64 md:h-96 w-full">
            {planet.celestialObject?.imageUrl ? (
              <img
                src={planet.celestialObject.imageUrl}
                alt={planet.celestialObject.globalName}
                class="w-full h-full object-cover"
                transition:name={`image-${planet.celestialObject.id}`}
              />
            ) : (
              <div class="w-full h-full bg-slate-900 flex items-center justify-center text-slate-500 text-2xl">
                No Image Available
              </div>
            )}

            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-slate-900 to-transparent p-8">
              <h1 class="text-4xl md:text-5xl font-extrabold text-white drop-shadow-lg">
                {planet.celestialObject.globalName}
              </h1>
            </div>
          </div>

          <div class="p-8 grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h2 class="text-2xl font-bold text-blue-400 mb-4">Description</h2>
              <p class="text-slate-300 leading-relaxed text-lg">
                {planet.celestialObject.description}
              </p>
            </div>

            <div class="bg-slate-900/50 p-6 rounded-xl border border-slate-700/50">
              <h2 class="text-xl font-bold text-white mb-4 border-b border-slate-700 pb-2">
                Planetary Data
              </h2>
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <span class="text-slate-400">Radius (Earths)</span>
                  <span class="text-white font-mono">{planet.radiusEarth}</span>
                </li>
                <li class="flex justify-between items-center">
                  <span class="text-slate-400">Mass (Earths)</span>
                  <span class="text-white font-mono">{planet.massEarth}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      ) : (
        <div class="flex items-center justify-center h-64">
          <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500" />
        </div>
      )
    }
  </div>
</Layout>
